datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
}

model Sweet {
  id        Int      @id @default(autoincrement())
  name      String
  category  String
  price     Float      
  stockKg   Float
  createdAt DateTime @default(now())
}

